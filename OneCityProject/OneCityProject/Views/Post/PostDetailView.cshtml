@{
    ViewBag.Title = "PostDetailView";
}
<br />

<div class="container">
            <!----- post-->
                <div class="row post" style="overflow: hidden; overflow-x:auto;">
                    <!----- -->
                    <div class="col-xs-3 height_box">
                        <!----- up arrow-->
                        <div class="col-xs-12 arrow">
                            <span class="glyphicon glyphicon-chevron-up element"></span>
                        </div>
                        <!----- count-->
                        <div class="col-xs-12 count">
                            50,000
                        </div>
                        <!----- down arrow-->
                        <div class="col-xs-12 arrow">
                            <span class="glyphicon glyphicon-chevron-down element"></span>
                        </div>
                    </div>
                    <!----- detail side of post-->
                    <div class="col-xs-9 height_box">
                        <!----- top side-->
                        <div class="row top-half half_box">
                            <!----- publisher-->
                            <div class="col-xs-3 status height_box">
                                hi carlos
                            </div>
                            <!----- title-->
                            <div class="col-xs-9 title height_box">
                                title
                            </div>
                        </div>
                        <!----- bottom side-->
                        <div class="row half_box">
                            <!----- location-->
                            <div class="col-xs-4 height_box">
                                location
                            </div>
                            <!----- username-->
                            <div class="col-xs-4 height_box">
                                username
                            </div>
                            <!----- time-->
                            <div class="col-xs-4 height_box">
                                time
                            </div>
                        </div>
                    </div>
                </div>
                <br>
    
    </div>

    <!------Post--->
    <div class="row">
        <!--this is where the post divs should go-->
        im the post
    </div>

    <br />

    <!------Pic and descriptions--->
    <div class="row">
        <div class="col-xs-4 picture">
            picture
        </div>

        <div class="col-xs-8 description">
            discription
        </div>

    </div>

    <br />

    <!------Gov Update--->
    <div class="row">
        <div class="col-xs-10">
            gov update
        </div>
        <div class="col-sm-2 btn btn-primary">Edit</div>
    </div>

</div>

