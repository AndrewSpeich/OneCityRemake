        foreach (Tuple<int,object> pair in data)
        {
            <!----- post-->
            int votes = (pair.Item1);
            object post = (pair.Item2);
            //string name = post.ApplicationUser.Email;
            //string desc = post.Title;
            bool anon;
            DateTime time;
            string locate;
            //var name = post.UserID
            <div class="row post" style="overflow: hidden; overflow-x:auto;">
